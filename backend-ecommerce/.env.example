# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=premium_hair_ecommerce
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# JWT Secret (Change this to a strong random string)
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=24h

# Admin Account (Default - Change on first login)
ADMIN_EMAIL=admin@premiumhairsa.co.za
ADMIN_PASSWORD=ChangeThisPassword123!

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5
BCRYPT_ROUNDS=12

# Business Configuration
COMPANY_NAME=Premium Hair Wigs & Extensions Pty (Ltd)
SUPPORT_EMAIL=support@premiumhairsa.co.za
VAT_RATE=0.15

# PayFast Configuration (Production)
PAYFAST_MERCHANT_ID=your_merchant_id
PAYFAST_MERCHANT_KEY=your_merchant_key
PAYFAST_PASSPHRASE=your_passphrase
PAYFAST_URL=https://www.payfast.co.za/eng/process
